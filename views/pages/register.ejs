<div class="small-cont">
  <h1>Register</h1>
  <form action="/register" method="post" enctype="multipart/form-data">
    <div class="editGrid">
      <div class="col-1">
        <div class="field">
          <label for="user_name">Username*</label>
          <input
            class="check"
            data-field="username"
            type="text"
            name="user_name"
            id="user_name"
            required
          />
        </div>
        <div class="field">
          <label for="email">Email*</label>
          <input
            class="check"
            data-field="email"
            type="email"
            name="email"
            id="email"
            required
          />
        </div>
        <div class="field">
          <label for="password">Password*</label>
          <input
            class="check"
            data-field="password"
            type="text"
            name="password"
            id="password"
            required
          />
        </div>
        <div class="field">
          <input
            type="file"
            name="profile_pic"
            id="profile_pic"
            accept="image/jpeg, image/png"
          />
          <label for="profile_pic">
            <p>Profile Picture</p>
            <p class="upload">
              <i class="fa-solid fa-file-arrow-up"></i>
              <span id="fileName"></span>
            </p>
          </label>
        </div>
      </div>
    </div>

    <div class="col-b">
      <div class="error-empty"></div>
      <% if (message) { %>
      <div class="error"><%= message %></div>
      <% } %>
      <button type="submit" class="cta-button">Register</button>
      <a href="/" class="sec-button">back</a>
    </div>
  </form>
</div>

